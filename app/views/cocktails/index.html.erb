<div class="home-page">
  <h1>Fancy Cocktails!</h1>

  <div class="row row-cols-1 row-cols-md-2">
    <% @cocktails.each do |cocktail| %>
      <div class="col mb-4">
        <div class="card">
          <%if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <img src="https://source.unsplash.com/1600x900/?cocktail" class="card-img-top" alt="...">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
              <% cocktail.doses.each do |dose| %>
                <p class="card-text"><%= dose.ingredient.name %></p>
              <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add Cocktail",  new_cocktail_path(@cocktail) %>
</div>
