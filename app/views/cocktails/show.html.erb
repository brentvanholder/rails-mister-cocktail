<h1><%= @cocktail.name %></h1>

<%if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <img src="https://source.unsplash.com/1600x900/?cocktail" class="card-img-top" alt="...">
<% end %>

<% @cocktail.doses.each do |dose| %>
  <p class="card-text"><%= dose.ingredient.name %></p>
<% end %>

<%= link_to "Add Ingredient",  new_cocktail_dose_path(@cocktail) %>
<%= link_to "| Back to home page",  cocktails_path %>
<%= link_to "| Delete Cocktail",  cocktails_path %>
